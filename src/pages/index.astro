---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle';
import SubstackSection from '../components/SubstackSection';
import '../styles/globals.css';
---

<Layout title="Casey Manos - Software Engineer">
  <!-- Navigation -->
  <nav class="fixed top-0 w-full z-50 glass border-b border-border/50">
    <div class="container mx-auto px-4 py-4">
      <div class="flex justify-between items-center">
        <a href="/" class="text-2xl font-bold gradient-text">
          Casey Manos
        </a>
        
        <div class="hidden md:flex items-center space-x-8">
          <a href="#about" class="text-muted-foreground hover:text-primary transition-colors">About</a>
          <a href="#projects" class="text-muted-foreground hover:text-primary transition-colors">Projects</a>
          <a href="#writing" class="text-muted-foreground hover:text-primary transition-colors">Writing</a>
          <a href="#contact" class="text-muted-foreground hover:text-primary transition-colors">Contact</a>
        </div>
        
        <ThemeToggle client:load />
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center px-4 pt-20">
    <div class="text-center max-w-4xl mx-auto">
      <div class="animate-fade-in-up">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 gradient-text">
          Software Engineer
        </h1>
        <p class="text-xl md:text-2xl text-muted-foreground mb-8 max-w-2xl mx-auto">
          Building modern web applications with a focus on performance, user experience, and scalable architecture.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#projects" class="px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors">
            View My Work
          </a>
          <a href="#contact" class="px-8 py-3 border border-border rounded-lg font-medium hover:bg-accent transition-colors">
            Get In Touch
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 px-4">
    <div class="container mx-auto max-w-4xl">
      <div class="animate-fade-in-up">
        <h2 class="text-4xl font-bold mb-8 text-center gradient-text">About Me</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="space-y-6">
            <p class="text-lg text-muted-foreground leading-relaxed">
              I'm a passionate software engineer with expertise in modern web technologies. 
              I love building applications that solve real problems and create meaningful user experiences.
            </p>
            <p class="text-lg text-muted-foreground leading-relaxed">
              My experience spans full-stack development, with a particular focus on React, TypeScript, 
              and cloud architectures. I'm always exploring new technologies and best practices to 
              stay at the forefront of the industry.
            </p>
            <div class="flex flex-wrap gap-3">
              <span class="px-3 py-1 bg-accent text-accent-foreground rounded-full text-sm">React</span>
              <span class="px-3 py-1 bg-accent text-accent-foreground rounded-full text-sm">TypeScript</span>
              <span class="px-3 py-1 bg-accent text-accent-foreground rounded-full text-sm">Node.js</span>
              <span class="px-3 py-1 bg-accent text-accent-foreground rounded-full text-sm">Python</span>
              <span class="px-3 py-1 bg-accent text-accent-foreground rounded-full text-sm">AWS</span>
              <span class="px-3 py-1 bg-accent text-accent-foreground rounded-full text-sm">Docker</span>
            </div>
          </div>
          <div class="flex justify-center">
            <div class="w-80 h-80 rounded-full bg-gradient-to-br from-blue-500 via-purple-500 to-indigo-500 flex items-center justify-center text-white text-6xl font-bold">
              CM
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-20 px-4 bg-accent/5">
    <div class="container mx-auto max-w-6xl">
      <div class="animate-fade-in-up">
        <h2 class="text-4xl font-bold mb-12 text-center gradient-text">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Project 1 -->
          <div class="glass rounded-lg overflow-hidden hover:scale-105 transition-transform duration-300">
            <div class="h-48 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-4xl">
              ðŸš€
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">Modern Web App</h3>
              <p class="text-muted-foreground mb-4">
                A full-stack application built with React, Node.js, and PostgreSQL.
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded text-xs">React</span>
                <span class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded text-xs">Node.js</span>
                <span class="px-2 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded text-xs">PostgreSQL</span>
              </div>
              <div class="flex gap-4">
                <a href="#" class="text-primary hover:underline text-sm">Live Demo</a>
                <a href="#" class="text-primary hover:underline text-sm">GitHub</a>
              </div>
            </div>
          </div>

          <!-- Project 2 -->
          <div class="glass rounded-lg overflow-hidden hover:scale-105 transition-transform duration-300">
            <div class="h-48 bg-gradient-to-br from-green-500 to-teal-600 flex items-center justify-center text-white text-4xl">
              ðŸ“±
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">Mobile-First Platform</h3>
              <p class="text-muted-foreground mb-4">
                Responsive web platform with Progressive Web App capabilities.
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded text-xs">PWA</span>
                <span class="px-2 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 rounded text-xs">TypeScript</span>
                <span class="px-2 py-1 bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 rounded text-xs">Redis</span>
              </div>
              <div class="flex gap-4">
                <a href="#" class="text-primary hover:underline text-sm">Live Demo</a>
                <a href="#" class="text-primary hover:underline text-sm">GitHub</a>
              </div>
            </div>
          </div>

          <!-- Project 3 -->
          <div class="glass rounded-lg overflow-hidden hover:scale-105 transition-transform duration-300">
            <div class="h-48 bg-gradient-to-br from-orange-500 to-red-600 flex items-center justify-center text-white text-4xl">
              âš¡
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">Performance Dashboard</h3>
              <p class="text-muted-foreground mb-4">
                Real-time analytics dashboard with advanced data visualization.
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                <span class="px-2 py-1 bg-orange-100 dark:bg-orange-900 text-orange-800 dark:text-orange-200 rounded text-xs">D3.js</span>
                <span class="px-2 py-1 bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 rounded text-xs">GraphQL</span>
                <span class="px-2 py-1 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200 rounded text-xs">Docker</span>
              </div>
              <div class="flex gap-4">
                <a href="#" class="text-primary hover:underline text-sm">Live Demo</a>
                <a href="#" class="text-primary hover:underline text-sm">GitHub</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Writing Section -->
  <section id="writing">
    <SubstackSection client:load />
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 px-4">
    <div class="container mx-auto max-w-2xl text-center">
      <div class="animate-fade-in-up">
        <h2 class="text-4xl font-bold mb-8 gradient-text">Let's Connect</h2>
        <p class="text-lg text-muted-foreground mb-8">
          I'm always interested in new opportunities and collaborations. 
          Feel free to reach out if you'd like to work together!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="mailto:hello@caseymanos.com" 
            class="px-8 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
          >
            Send Email
          </a>
          <a 
            href="https://linkedin.com/in/caseymanos" 
            target="_blank" 
            rel="noopener noreferrer"
            class="px-8 py-3 border border-border rounded-lg font-medium hover:bg-accent transition-colors"
          >
            LinkedIn
          </a>
          <a 
            href="https://github.com/caseymanos" 
            target="_blank" 
            rel="noopener noreferrer"
            class="px-8 py-3 border border-border rounded-lg font-medium hover:bg-accent transition-colors"
          >
            GitHub
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-8 px-4 border-t border-border">
    <div class="container mx-auto text-center text-muted-foreground">
      <p>&copy; 2024 Casey Manos. All rights reserved.</p>
    </div>
  </footer>
</Layout>
